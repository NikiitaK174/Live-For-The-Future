<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".MainActivity2">

    <!--white background-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@drawable/background_rounded"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:elevation="2dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <!--Title of Page-->
    <TextView
        android:id="@+id/topTextPage2"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="60dp"
        android:text="Welcome [name]"
        android:textColor="@color/pink"
        android:textSize="60sp"
        android:textStyle="bold"
        android:elevation="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!--Water button-->
    <LinearLayout
        android:id="@+id/water_button_layout"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:background="@drawable/water_shape"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="400dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/water_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cup_of_water"
            />

        <TextView
            android:id="@+id/water_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log the amount of water you drink"
            android:textColor="@color/waterText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <!--food Button -->
    <LinearLayout
        android:id="@+id/food_button_layout"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:background="@drawable/food_shape"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:padding="10dp"

        android:clickable="true"
        android:focusable="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="400dp"
        app:layout_constraintHorizontal_bias="0.95"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/food_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fork_and_spoon"
            />

        <TextView
            android:id="@+id/food_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make sure you eat well"
            android:textColor="@color/foodText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <!--exercise Button -->
    <LinearLayout
        android:id="@+id/exercise_button_layout"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:background="@drawable/exercise_shape"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/exercise_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl_doing_yoga"
            />

        <TextView
            android:id="@+id/exercise_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay active and healthy"
            android:textColor="@color/exerciseText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <!--journal Button -->
    <LinearLayout
        android:id="@+id/journal_button_layout"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:background="@drawable/feelings_shape"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        app:layout_constraintHorizontal_bias="0.95"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/journal_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/journal"
            />

        <TextView
            android:id="@+id/journal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep track of how you're feeling"
            android:textColor="@color/feelingsText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <!--chatbot Button -->
    <Button
        android:id="@+id/AI_help_button"
        android:layout_width="315dp"
        android:layout_height="126dp"
        android:background="@drawable/chatbot_shape"
        android:gravity="center"

        android:text="Talk with Nadia!"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraint="parent"
        android:elevation="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
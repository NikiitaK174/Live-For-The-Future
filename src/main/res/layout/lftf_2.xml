<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="#FFFFFF">

        <!-- Sign Up Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center" />

        <!-- Already Registered? Login -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already registered? Login"
            android:textSize="14sp"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:paddingBottom="10dp"/>

        <!-- Pregnant Woman Image -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/pregnant_woman"
            android:contentDescription="Pregnant woman illustration"
            android:layout_gravity="center" />

        <!-- Click Here for More Info -->
        <Button
            android:id="@+id/buttonMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Name Input Field -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:background="@android:drawable/editbox_background"
            android:padding="10dp" />

        <!-- Email Input Field -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/editbox_background"
            android:padding="10dp" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@android:drawable/editbox_background"
            android:padding="10dp" />

        <!-- Date of Birth Input Field (Click to Open Date Picker) -->
        <EditText
            android:id="@+id/editTextDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:focusable="false"
            android:background="@android:drawable/editbox_background"
            android:padding="10dp" />

        <!-- Due Date (Optional) -->
        <EditText
            android:id="@+id/editTextDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Due Date *Optional"
            android:focusable="false"
            android:background="@android:drawable/editbox_background"
            android:padding="10dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF0000"
            android:padding="10dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF" />

    </LinearLayout>

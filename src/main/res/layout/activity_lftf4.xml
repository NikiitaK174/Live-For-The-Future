<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- More Info Button (Top Left) -->
    <ImageButton
        android:id="@+id/moreInfoButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:src="@drawable/screenshot_10_3_2025_184755_www_canva_com"
        android:contentDescription="More Info" />

    <!-- Emergency Button (Top Right) -->
    <ImageButton
        android:id="@+id/btnEmergency"
        android:layout_width="118dp"
        android:layout_height="104dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="300dp"
        android:background="@null"
        android:contentDescription="Emergency button"
        android:src="@drawable/screenshot_12_3_2025_155253_www_canva_com"
        android:textSize="8sp" />



    <!-- Health Tracking Buttons in Center -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="500dp"
        android:gravity="center"
        android:orientation="vertical">  <!-- Centers everything inside -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome [ ]"
            android:layout_marginTop="60dp"
            android:textColor="@color/pink"
            android:textSize="42sp"
            android:textStyle="bold"
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/waterLogButton"
            android:src="@drawable/screenshot_10_3_2025_19248_www_canva_com__1_"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:backgroundTint="#Add8e6"
            android:text="Log Water"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/foodLogButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Track Food"
            android:src="@drawable/screenshot_10_3_2025_193041_www_canva_com__1_"
            android:backgroundTint="#Ffd700"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/fitnessButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Stay Fit"
            android:src="@drawable/screenshot_10_3_2025_193441_www_canva_com__1_"
            android:backgroundTint="#90EE90"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/feelingsTrackerButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="My Mood"
            android:src="@drawable/screenshot_10_3_2025_193936_www_canva_com"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/pink" />

    </GridLayout>

    <!-- Chat Feature (Bottom Center) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Chat Feature (Bottom Right) -->

        <Button
            android:id="@+id/buttonMoreInfo"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="151dp"
            android:layout_marginBottom="65dp"
            android:backgroundTint="#E91E63"
            android:padding="10dp"
            android:text="Click Here For Personalized Advice"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="0dp"
            android:layout_marginEnd="-28dp"
            android:layout_marginBottom="-29dp"
            android:contentDescription="Pregnant woman illustration"
            android:src="@drawable/live_for_the_future___app_design__1_" /> <!-- Adjust bottom margin to ensure spacing between the button and image -->

    </RelativeLayout>


</RelativeLayout>
